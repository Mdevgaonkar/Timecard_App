<div class="container">
  <div class="alert alert-info text-center" role="alert" id="logAlert">
    To enter your hours start with verifying your password.
  </div>
  <div class="col-md-2">
    <center><button type="button" class="alert alert-danger hidden" id= "logout">Logout</button></center>
  </div>
  <br>
  <div><center>
    <form class="form-inline" method="post" id = "login">
      <div class="form-group">
        <input type="text" class="form-control" id="username"  name="user" placeholder="Username" required>
      </div>
      <div class="form-group">
        <input type="password" class="form-control" id="password" name="pass" placeholder="Password" required>
      </div>
      <button type="submit" class="btn btn-primary">Login</button>
      <br>
      <br>
      <div class="alert alert-info text-center hidden" role="alert" id="logErr">
      </div>
    </form>
  </center>
  </div>

  <hr>
  <div class="row">
    <div class="col-md-6">
      <form class="form"  id = "timesheetForm" method="post">
        <div class="form-group">
          <label for="dateTmst">Select Date</label>
          <input type="date" class="form-control" id="dateTmst"  name="dateTmst" required>
        </div>
        <br>
       

        <div class="form-group">
            <label>Timesheet Entry</label>
        <div class="form-group">
          <label for="selectTask">Select Task</label>
          <select class="form-control" id="selectTask">
            <option>Select Task</option>
          </select>
          <div class="alert alert-info" id="taskInfo">
              Task info!
          </div>
        </div>
        <div class="form-group" >
          <label for="hrsTmst">Enter Hours spent</label>
          <input type="number" class="form-control" id="hrsTmst" name="hrsTmst" required>
        </div>
        <button type="button" class="btn btn-primary" id="populateButton">Populate</button>
      </div>
        <br>
        <br>
        <div class="alert alert-info text-center hidden" role="alert" id="tmstLogErr">
        </div>
      </form>
    </div>
    <div class="col-md-6">

        <div class="jumbotron" style="max-width: 40rem;" id="timecard">
            <div class="row card-title"><h4>Timecard for date <span id="tmstDate">20/12/1017</span></h4></div>
            <div class="row card-body">
              <table class="table table-sm" id="tmstTable">
                  <thead class="thead-light">
                    <tr>
                      <th scope="col">#</th>
                      <th scope="col">Task</th>
                      <th scope="col">Hours</th>
                      <th scope="col"></th>
                    </tr>
                  </thead>
                  <tbody>
                      
                  </tbody>
                </table>
            </div>
            <br>
            <br>
            <div class="row card-footer"><h4>Total hours : <span id="totalHours">8</span></h4></div>
            <div class="row card-footer">
              <button type="reset" class="btn btn-warning" id="clearTimecard">Clear</button>
              <button type="submit" class="btn btn-primary" id="submitTimecard">Submit</button>
            </div>
          </div>
    </div>
  </div> 
  
</div>

<script type="text/javascript" src="/JS/app.js"></script>
